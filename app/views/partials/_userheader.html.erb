<div class="media">
    <div class="col-md-3" style="padding-left: 0px">
        <img class="img-fluid mr-3 rounded-circle" src="<%= @profile.avatar_data %>" alt="<%= @profile.user_name %>'s avatar">
    </div>
    <div class="col-md-9 media-body padding-right: 0px">
    <h5 class="mt-0"><strong>@<%= @profile.user_name %></strong> | <%= @profile.first_name %> <%= @profile.last_name %></h5>
    <p><%= link_to @profile.website %></p>
    <p><%= @profile.bio %></p>
  </div>
</div>

<p></p>

<p><img src="https://maps.googleapis.com/maps/api/staticmap?center=<%=@profile.latitude%>,<%=@profile.longitude%>&zoom=13&scale=1&size=500x300&maptype=roadmap&format=png&visual_refresh=true&markers=size:mid%7Ccolor:0xff0000%7Clabel:1%7C<%=@profile.latitude%>,<%=@profile.longitude%>"></p>
<p><img src="https://maps.googleapis.com/maps/api/staticmap?center=<%=@profile.full_address%>&zoom=13&scale=1&size=500x300&maptype=roadmap&format=png&visual_refresh=true&markers=size:mid%7Ccolor:0xff0000%7Clabel:1%7C<%=@profile.full_address%>"></p>
<p>
    Address: <%= @profile.premise + ' ' unless @profile.premise.nil? %><%= @profile.premise %>, <%= @profile.thoroughfare %>, <%= @profile.city %>, <%= @profile.administrative_area %> <%= @profile.postal_code %>, <%= @profile.country %>
</p>
<p>Profile created: <%= @profile.created_at.strftime("%A, %B %d @ %H:%M") %></p>