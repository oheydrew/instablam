<div class="fixed-top">
<div class="container border-bottom">
<nav class="navbar navbar-expand-lg navbar-dark">
    <span class="navbar-brand" href="#"><%= link_to_unless_current 'InstaBlam!', root_path, class: 'navbar-brand' %></span>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item"> <%= link_to_unless_current 'Home', root_path %> |&nbsp;</li>
            <li class="nav-item"> <%= link_to_unless_current 'Photos', posts_path %> |&nbsp;</li>
            <%= (current_user) ? (link_to 'New Blam!', new_post_path) : ("") %>
        </ul>
        <ul class="navbar-nav">
            <li class="nav-item">
            <% if !user_signed_in? %>
                <%= link_to_unless_current 'Register', new_user_registration_path %> |&nbsp;
                <%= link_to_unless_current 'Log In', new_user_session_path %>
            <% elsif current_user.profile.nil? || current_user.profile.user_name.nil? %>
                Profile Incomplete | <%= link_to_unless_current 'Log Out', destroy_user_session_path, method: :delete %>
            <% else %>   
                <div class="dropdown">
                    <div id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <a href="#nav"><strong><%= current_user.user_name %></strong>&nbsp;&nbsp;<img src="<%= current_user.profile.avatar_data %>" height="40px" class="rounded-circle border" ></a>
                    </div>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                        <%= link_to ('@' + current_user.profile.user_name), profile_path, class: 'dropdown-item' %>
                        <%= link_to 'Edit Profile', profile_edit_path, class: 'dropdown-item' %>
                        <%= link_to_unless_current 'Log Out', destroy_user_session_path, class: 'dropdown-item', method: :delete %>
                    </div>
                </div>
            <% end %>
            </li>
        </ul>
    </div>
</nav>
</div>
</div>