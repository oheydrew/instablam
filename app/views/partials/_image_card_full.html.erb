<div class="card text-white bg-dark w-100">
  <%= image_tag post.image_data, width: "100%", class:"card-img-top", alt:"#{post.user.user_name}'s post ##{post.id}" %>
  <div class="card-body">
    <p class="card-text">
        Likes: <%= post.likes %> | Comments: <%= post.comment_count %><br/>
        <%= link_to post.created_at.strftime("%A, %B %d @ %H:%M"), post_path(post[:id]) %></br>
    </p>
    <p class="card-text">
        <%= post.caption %>
    </p>
    <%= link_to 'Edit', edit_post_path(post) %> | <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }  %>
  </div>
</div>